<h1>Projects#new</h1>

<%= form_for @project do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :goal %>
    <%= f.number_field :goal %>
  </div>
  <div class="field">
    <%= f.label :deadline %>
    <%= f.date_field :deadline %>
  </div>
  <div class="action">
    <%= f.submit %>
  </div>

<% end %>
